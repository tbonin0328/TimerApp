<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fadingEdge="vertical" >
    
    <ImageView 
        android:id="@+id/list_view_imageView"
      	android:layout_width="48dp"
	    android:layout_height="48dp"
	    android:layout_alignParentLeft="true"
	    android:src="@drawable/iconsmall_30m"
	    />
     
    <TextView
	    android:id="@+id/timer_list_item_title_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_toRightOf="@id/list_view_imageView"
	    android:layout_marginLeft="10dp"
	    android:textStyle="bold"
	    android:text="Item"
	    style="@style/heading_one" />
	
	<TextView
	    android:id="@+id/timer_list_item_desc_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_below="@id/timer_list_item_title_textview"
	    android:layout_toRightOf="@id/list_view_imageView"
	    android:layout_marginLeft="10dp"
	    android:text="Description"
	    style="@style/main_text"  />

</RelativeLayout>